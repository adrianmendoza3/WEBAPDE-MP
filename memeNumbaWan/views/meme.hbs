    <title>{{post.title}}</title>
    <script src="jquery-3.3.1.js"> </script>
    <script>
        $(document).ready(function(){
            $("button.tag").click(function(){
                
                //get attr data id from the clicked button
                var id = $(this).attr("data-id")
                alert(id)

                //place data id into input#
                $("input#viewid").val(id)

                //submit the form#
                $("form#addTagForm").submit()
            })


            $("button.userclickhere").click(function(){
                //get attr data id from the clicked button
                var id = $(this).attr("data-id")

                //place data id into input#deleteid
                $("input#userid").val(id)

                //submit the form#deleteform
                $("form#userform").submit()
            })
        })
          
    </script>

    <!-- Bootstrap core CSS -->
<!--    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">-->


      <link rel="stylesheet" href="main.css">

      <!-- App CSS -->
      <link rel="stylesheet" href="/app.css">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
  </head>

  <body>

    <!-- Modal Log in-->
    <div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="signinModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"> <!--the whole popup-->
          <div class="modal-header"><!--"login" and exit button-->
            <h5 class="modal-title" id="signinModalLabel">Login</h5> <!--"login"-->
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <!--exit button-->
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form method="POST" action="user/login"> <!--bottom half of the popup-->
            <div class="modal-body"> <!--username, password, remember me-->
                  <div class="form-group row"> <!--username-->
                      <label for="username" class="col-sm-4 col-form-label text-md-right">Username</label>
                      <div class="col-md-6">
                          <input id="username" type="text" class="form-control" name="username" value="" required="" autofocus="">
                      </div>
                  </div>
                  <div class="form-group row"><!--password-->
                      <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>

                      <div class="col-md-6">
                          <input id="password" type="password" class="form-control" name="password" required="">
                      </div>
                  </div>

                  <div class="form-group row"><!--remember me-->
                      <div class="col-md-6 offset-md-4">
                          <div class="checkbox">
                              <label>
                                  <input type="checkbox" name="remember"> Remember Me
                              </label>
                          </div>
                      </div>
                  </div>
              
            </div>
            <div class="modal-footer"> 
              <button type="submit" class="btn btn-primary">Login</button> <!--login button-->
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Modal Register-->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content"> <!--the whole pop up-->
            <div class="modal-header"> <!--"register" and exit button-->
              <h5 class="modal-title" id="registerModalLabel">Register</h5> <!--"register"-->
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <!--exit button-->
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form method="POST" action="user/register"> <!--bottom half of pop up-->
                <div class="modal-body"> <!--username, password, confirm password-->
                    <div class="form-group row"> <!--username-->
                        <label for="username" class="col-md-4 col-form-label text-md-right">Username</label>
                        <div class="col-md-6">
                            <input id="username" type="text" class="form-control" name="username" value="" required="" autofocus="">
                        </div>
                    </div>
                    <div class="form-group row"> <!--password-->
                        <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                        <div class="col-md-6">
                            <input id="password" type="password" class="form-control" name="password" required="">
                        </div>
                    </div>
                    <div class="form-group row"> <!--confirm password-->
                        <label for="confirmpassword" class="col-md-4 col-form-label text-md-right">Confirm Password</label>
                        <div class="col-md-6">
                            <input id="confirmpassword" type="password" class="form-control" name="confirmpassword" required="">
                        </div>
                    </div>
                </div>
                <div class="modal-footer"> <!--cancel and register button-->
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button> <!--cancel button-->
                    <button type="submit" class="btn btn-primary">Register</button>  <!--register button-->
                </div>
            </form>
          </div>
        </div>
      </div>

    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-red fixed-top bg-red">
        <a class="navbar-brand" href="home"><img id="logo" src="/MEME NUMBA WAN.png"/></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="uploadmeme">Upload a Meme</a> <!--upload a meme button-->
            </li>
            <li class="nav-item">
              <a class="nav-link" href="profile">My Profile</a> <!--my profile button-->
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
              <form class="form-inline my-2 my-lg-0" action="search" method="GET">
                  <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="searchinput"> <!--search bar-->
                  <button id="search" class="btn btn-outline-success my-2 my-sm-0 mr-sm-2" type="submit">Search</button> <!--search button-->
              </form>
              <!--log out button-->
              <form action="logout">
                  <button id="logout" class="btn btn-outline-warning my-2 my-sm-0" type="submit" >Logout</button>
              </form>
        </ul>
        </div>
      </nav>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container">
        <div class="row">

            <form id = "userform" action="profile" method="get">
                <input id ="userid" type = "hidden"  name = "id">
            </form>

        {{#each posts}}
            <div class="col-12 col-md-7 memecontent" data-id="{{_id}}">
                <h1 class="pageTitle"> {{title}} </h1>
                <h6 align="right" class="type">Public</h6>
                <img src="/meme1.jpg" />
                <div>
                    <!--Tags:-->
                    {{#each tags}}
                        <a href="tag">{{name}} TAG</a>
                    {{/each}}
                </div>
                <div data-id="{{_id}}">
                    <i class="fas fa-user" style="color:#5a5a5a"> : </i>
                    <button class="userclickhere" data-id=""{{_id}}"><h5>{{user}}</h5></button>
                </div>

                <!-- will show only when user owns this meme-->
                
                <!-- will show only when user owns this meme-->

<!--                NEWWW-->
                <div class="col-12 col-md-7 addTag">
                    <div class="input-group mb-3">
                        <div class="input-group-append" data-id="{{post._id}}">
                        
                        <form id = "addTagForm" action="addTag" method="post">    
                        <input type="text" class="form-control" placeholder="Tag Name" aria-label="Tag Name" aria-describedby="basic-addon2" name="addtagname">
                            <button class="btn btn-danger tag" data-id="{{post._id}}" ><i class="fas fa-plus"></i></button>
                            
                             <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#shareModal"><i class="fas fa-share"></i></a>
                        </form>
                       
                    
                        </div>
                    </div>
                </div>                
            </div>

        {{/each}}
        </div>
    </main>

